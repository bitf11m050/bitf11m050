@{
    ViewBag.Title = "ShoppingCart";
    Layout = null;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>

	<!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">
    
    <link href="style.css" rel="stylesheet" media="screen">

   <!-- <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</head>

<body>

	<div class="container top50">
	<div class="row">
		<div class="col-xs-8">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">
						<div class="row">
							<div class="col-xs-6">
								<h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
							</div>
							<div class="col-xs-6">
								<a  href="~/Home/About" class="btn btn-primary btn-sm btn-block" role="button" >
                                    <span class="glyphicon glyphicon-share-alt"></span>Continue shopping									
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
                    @foreach( var item  in @Model)
                    {
					<div class="row">
						<div class="col-xs-2"><img class="img-responsive" src="~/ProductPhotos/@item.ImageUrl">
						</div>
						<div class="col-xs-4">
							<h4 class="product-name"><strong>@item.Name</strong></h4><h4><small>@item.Details</small></h4>
						</div>
						<div class="col-xs-6">
							<div class="col-xs-6 text-right">
								<h6><strong>$@item.Price <span class="text-muted">x</span></strong></h6>
							</div>
							<div class="col-xs-4">
								<input type="text" class="form-control input-sm" value="1">
							</div> 

							<div class="col-xs-2">
								<a href="~/Home/EditCart/@item.Id" class="btn btn-link btn-xs" role="button">
									<span class="glyphicon glyphicon-trash"> </span>
								</a>
							</div>
						</div>
					</div>
					<hr>
                        }
			
				</div>
				<div class="panel-footer">
					<div class="row text-center">
						<div class="col-xs-9">
							<h4 class="text-right">Total:<strong>$ @ViewBag.Total</strong></h4>
						</div>
						<div class="col-xs-3">
							<a href="~/Home/Checkout/@ViewBag.Id" class="btn btn-success btn-block" role="button">
								Checkout
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>

</body>
